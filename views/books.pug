extends layout
block content
    div.container-fluid
        div.col.text-center
            img.img-fluid(src="/images/001.jpg")
    div.row
        div.col-3.col-sm-3.col-md-3.col-lg-3
        div.col-9.col-sm-9.col-md-9.col-lg-9.mt-5
            div.row
                each item in result
                    div.col-3.col-sm-3.col-md-3.col-lg-3
                        div.card.card-style
                            img.card-img-top(src="/images/"+item.image alt="imagen libro")
                            div.card-body
                                h5.card-title=item.name
                                p.card-text=item.category
